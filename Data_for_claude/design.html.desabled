<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Astral Frontier - Preloader</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Courier New', monospace;
            background: #000;
            color: #8F7E77;
            overflow-x: hidden;
        }

        /* Preloader Styles */
        .preloader {
            position: fixed;
            inset: 0;
            background: #000;
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: opacity 0.5s ease, visibility 0.5s ease;
        }

        .preloader.hidden {
            opacity: 0;
            visibility: hidden;
        }

        .preloader-content {
            position: relative;
            text-align: center;
        }

        /* Animated Border Frame */
        .loader-frame {
            position: relative;
            width: 180px;
            height: 90px;
            margin: 0 auto 30px;
        }

        .loader-corners {
            position: absolute;
            inset: 0;
        }

        .corner {
            position: absolute;
            width: 20px;
            height: 20px;
        }

        .corner-line {
            position: absolute;
            background: #8F7E77;
        }

        /* Top Left Corner */
        .top-left {
            top: 0;
            left: 0;
        }

        .top-left .v-line {
            width: 1px;
            height: 0;
            left: 0;
            top: 0;
            animation: expandVertical 1s ease forwards;
        }

        .top-left .h-line {
            height: 1px;
            width: 0;
            top: 0;
            left: 0;
            animation: expandHorizontal 1s ease 0.25s forwards;
        }

        /* Top Right Corner */
        .top-right {
            top: 0;
            right: 0;
        }

        .top-right .h-line {
            height: 1px;
            width: 0;
            top: 0;
            right: 0;
            animation: expandHorizontalReverse 1s ease 0.5s forwards;
        }

        .top-right .v-line {
            width: 1px;
            height: 0;
            right: 0;
            top: 0;
            animation: expandVertical 1s ease 0.75s forwards;
        }

        /* Bottom Right Corner */
        .bottom-right {
            bottom: 0;
            right: 0;
        }

        .bottom-right .v-line {
            width: 1px;
            height: 0;
            right: 0;
            bottom: 0;
            animation: expandVerticalReverse 1s ease 1s forwards;
        }

        .bottom-right .h-line {
            height: 1px;
            width: 0;
            bottom: 0;
            right: 0;
            animation: expandHorizontalReverse 1s ease 1.25s forwards;
        }

        /* Bottom Left Corner */
        .bottom-left {
            bottom: 0;
            left: 0;
        }

        .bottom-left .h-line {
            height: 1px;
            width: 0;
            bottom: 0;
            left: 0;
            animation: expandHorizontal 1s ease 1.5s forwards;
        }

        .bottom-left .v-line {
            width: 1px;
            height: 0;
            left: 0;
            bottom: 0;
            animation: expandVerticalReverse 1s ease 1.75s forwards;
        }

        /* Top and Bottom Lines with Dashes */
        .top-line, .bottom-line {
            position: absolute;
            left: 20px;
            right: 20px;
            height: 1px;
            opacity: 0;
            animation: fadeInLine 0.5s ease 2s forwards;
        }

        .top-line {
            top: 0;
            background: repeating-linear-gradient(
                to right,
                #8F7E77 0px,
                #8F7E77 10px,
                transparent 10px,
                transparent 15px
            );
        }

        .bottom-line {
            bottom: 0;
            background: repeating-linear-gradient(
                to right,
                #8F7E77 0px,
                #8F7E77 10px,
                transparent 10px,
                transparent 15px
            );
        }

        /* Percentage Counter */
        .percentage {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 28px;
            letter-spacing: 4px;
            font-weight: bold;
            color: #8F7E77;
            opacity: 0;
            animation: fadeIn 0.5s ease 2.5s forwards;
        }

        /* Begin Journey Text */
        .begin-text {
            font-size: 14px;
            letter-spacing: 3px;
            color: #8F7E77;
            text-transform: uppercase;
            opacity: 0;
            animation: fadeIn 0.5s ease 3.5s forwards;
        }

        /* Top Text */
        .top-text {
            position: absolute;
            top: 80px;
            right: 50%;
            transform: translateX(50%);
            font-size: 10px;
            letter-spacing: 2px;
            color: #8F7E77;
            text-transform: uppercase;
            opacity: 0;
            animation: fadeIn 0.5s ease 2.5s forwards;
            white-space: nowrap;
        }

        /* Animations */
        @keyframes expandVertical {
            to { height: 20px; }
        }

        @keyframes expandVerticalReverse {
            from { height: 0; }
            to { height: 20px; }
        }

        @keyframes expandHorizontal {
            to { width: 20px; }
        }

        @keyframes expandHorizontalReverse {
            from { width: 0; }
            to { width: 20px; }
        }

        @keyframes fadeInLine {
            to { opacity: 1; }
        }

        @keyframes fadeIn {
            to { opacity: 1; }
        }

        /* Landing Section */
        .landing {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: flex-end;
            padding: 100px 80px;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 1080"><rect fill="%23000000" width="1920" height="1080"/></svg>');
            position: relative;
        }

        .landing::before {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 30% 50%, rgba(143, 126, 119, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

        .landing-content {
            max-width: 800px;
            text-align: right;
            position: relative;
            z-index: 1;
        }

        .main-title {
            font-size: 80px;
            line-height: 1.1;
            letter-spacing: 8px;
            text-transform: uppercase;
            color: #8F7E77;
            margin-bottom: 30px;
            font-weight: 300;
        }

        .subtitle {
            font-size: 12px;
            letter-spacing: 4px;
            text-transform: uppercase;
            color: #8F7E77;
            opacity: 0.8;
        }

        /* Grid Lines Background */
        .grid-overlay {
            position: absolute;
            inset: 0;
            opacity: 0.2;
            pointer-events: none;
        }

        .grid-line {
            position: absolute;
            background: #8F7E77;
        }

        .grid-line.vertical {
            width: 1px;
            height: 100%;
            top: 0;
        }

        .grid-line.horizontal {
            height: 1px;
            width: 100%;
            left: 0;
        }

        @media (max-width: 768px) {
            .landing {
                padding: 60px 30px;
                justify-content: center;
            }

            .landing-content {
                text-align: center;
            }

            .main-title {
                font-size: 40px;
                letter-spacing: 4px;
            }

            .subtitle {
                font-size: 10px;
            }

            .loader-frame {
                width: 150px;
                height: 75px;
            }

            .percentage {
                font-size: 22px;
            }
        }
    </style>
</head>
<body>
    <!-- Preloader -->
    <div class="preloader" id="preloader">
        <div class="preloader-content">
            <div class="top-text">Job Shooting for Exploration</div>
            
            <div class="loader-frame">
                <div class="loader-corners">
                    <!-- Top Left -->
                    <div class="corner top-left">
                        <div class="corner-line v-line"></div>
                        <div class="corner-line h-line"></div>
                    </div>
                    
                    <!-- Top Right -->
                    <div class="corner top-right">
                        <div class="corner-line h-line"></div>
                        <div class="corner-line v-line"></div>
                    </div>
                    
                    <!-- Bottom Right -->
                    <div class="corner bottom-right">
                        <div class="corner-line v-line"></div>
                        <div class="corner-line h-line"></div>
                    </div>
                    
                    <!-- Bottom Left -->
                    <div class="corner bottom-left">
                        <div class="corner-line h-line"></div>
                        <div class="corner-line v-line"></div>
                    </div>
                </div>
                
                <div class="top-line"></div>
                <div class="bottom-line"></div>
                
                <div class="percentage" id="percentage">0%</div>
            </div>

            <div class="begin-text">Begin Journey</div>
        </div>
    </div>

    <!-- Landing Section -->
    <section class="landing">
        <div class="grid-overlay">
            <div class="grid-line vertical" style="left: 20%;"></div>
            <div class="grid-line vertical" style="left: 40%;"></div>
            <div class="grid-line vertical" style="left: 60%;"></div>
            <div class="grid-line vertical" style="left: 80%;"></div>
            <div class="grid-line horizontal" style="top: 25%;"></div>
            <div class="grid-line horizontal" style="top: 50%;"></div>
            <div class="grid-line horizontal" style="top: 75%;"></div>
        </div>

        <div class="landing-content">
            <h1 class="main-title">
                PREPARE YOUR<br>
                JOURNEY ACROSS<br>
                DISTANT WORLDS...
            </h1>
            <p class="subtitle">For best experience turn volume on</p>
        </div>
    </section>

    <script>
        // Percentage Counter Animation
        const percentageEl = document.getElementById('percentage');
        const preloader = document.getElementById('preloader');
        let count = 0;
        const targetCount = 100;
        const duration = 4000; // 4 seconds
        const startDelay = 2500; // Start after border animation completes

        setTimeout(() => {
            const increment = targetCount / (duration / 16); // 60fps
            
            const counter = setInterval(() => {
                count += increment;
                if (count >= targetCount) {
                    count = targetCount;
                    clearInterval(counter);
                    
                    // Hide preloader after completion
                    setTimeout(() => {
                        preloader.classList.add('hidden');
                    }, 500);
                }
                percentageEl.textContent = Math.floor(count) + '%';
            }, 16);
        }, startDelay);
    </script>
</body>
</html>