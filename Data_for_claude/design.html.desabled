<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Rainy Glass CTA Button</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(
          circle at top,
          #f5f5f3 0,
          #d4d4cf 45%,
          #b9b9b3 100%
        );
        font-family: "Nunito", system-ui, -apple-system, BlinkMacSystemFont,
          sans-serif;
      }

      /* ========== GLASS BUTTON ========== */

      .home-benefits-cta {
        all: unset;
        box-sizing: border-box;

        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 1.75rem;
        border-top: 1px solid rgba(20, 20, 20, 0.12);
        border-bottom: 1px solid rgba(20, 20, 20, 0.12);
        border-left: none;
        border-right: none;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.16em;
        text-decoration: none;
        color: #141414;
        overflow: hidden;
        background: rgba(20, 20, 20, 0.02);
        transition: color 0.3s ease, background 0.3s ease;
        cursor: pointer;
      }

      .home-benefits-cta-bg {
        position: absolute;
        inset: 0;
        background: #9bc56f;
        opacity: 0.15;
        transform-origin: left;
        transform: scaleX(0);
        transition: transform 0.8s ease-out;
        pointer-events: none;
        z-index: 0;
      }

      .home-benefits-cta-label {
        position: relative;
        z-index: 2;
      }

      .home-benefits-cta-icon {
        position: relative;
        z-index: 2;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(20, 20, 20, 0.12);
        font-size: 1.1rem;
        transform: translateX(0);
        opacity: 1;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
      }

      .home-benefits-cta:hover {
        background: #9bc56f20;
        color: #000;
      }

      .home-benefits-cta:hover .home-benefits-cta-bg {
        transform: scaleX(1);
      }

      .home-benefits-cta:hover .home-benefits-cta-icon {
        transform: translateX(6px);
      }

      button.home-benefits-cta {
        appearance: none;
        outline: none;
      }

      button.home-benefits-cta:focus {
        outline: 2px solid #5b7c4f;
        outline-offset: 2px;
      }

      /* ========== RAIN LAYER INSIDE BUTTON ========== */

      .btn-rain-layer {
        position: absolute;
        inset: 0;
        overflow: hidden;
        z-index: 1; /* between bg (0) and label/icon (2) */
        pointer-events: none;
      }

      .btn-rain-drops,
      .btn-rain-shadows {
        position: absolute;
        inset: 0;
      }

      .btn-rain-drop,
      .btn-rain-shadow {
        position: absolute;
        border-radius: 999px;
        top: -20%; /* ðŸ‘ˆ keep above button before animation */
        opacity: 0; /* ðŸ‘ˆ hide before animation */
      }

      .btn-rain-drop {
        background: linear-gradient(
          to bottom,
          rgba(255, 255, 255, 0.95),
          rgba(255, 255, 255, 0.25)
        );
        filter: blur(0.25px);
      }

      .btn-rain-shadow {
        margin-left: 1px;
        margin-top: 1px;
        box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.25);
      }

      /* Slide using TOP from -20% to 120% */
      @keyframes btn-streaking {
        0% {
          opacity: 0;
          top: -20%;
        }
        10% {
          opacity: 1;
        }
        90% {
          opacity: 1;
        }
        100% {
          opacity: 0;
          top: 120%;
        }
      }
    </style>
  </head>
  <body>
    <button class="home-benefits-cta">
      <span class="home-benefits-cta-bg"></span>

      <!-- rain layer -->
      <div class="btn-rain-layer">
        <div class="btn-rain-shadows"></div>
        <div class="btn-rain-drops"></div>
      </div>

      <span class="home-benefits-cta-label">Explore benefits</span>
      <span class="home-benefits-cta-icon">â†’</span>
    </button>

    <script>
      (function () {
        const dropCount = 40;
        const dropsContainer = document.querySelector(".btn-rain-drops");
        const shadowsContainer = document.querySelector(".btn-rain-shadows");

        if (!dropsContainer || !shadowsContainer) return;

        const maxDelay = 2.0; // total stagger spread in seconds

        for (let i = 0; i < dropCount; i++) {
          const drop = document.createElement("div");
          const shadow = document.createElement("div");

          drop.className = "btn-rain-drop";
          shadow.className = "btn-rain-shadow";

          // RANDOM X across full width
          const x = Math.random();
          const leftPercent = x * 100;

          // BASE WIDTH
          const baseWidth = 1 + Math.random() * 3; // 1â€“4px

          // RANDOM OVERALL SIZE (width + height together)
          const sizeScale = 0.8 + Math.random() * 2.2; // 0.8â€“3x
          let dropWidth = baseWidth * sizeScale;

          // SHAPE: 70% round-ish, 30% short streak
          const shapeVariant = Math.random();
          let heightRatio;

          if (shapeVariant < 0.7) {
            // round-ish
            heightRatio = 1 + Math.random() * 0.3; // 1â€“1.3x
          } else {
            // short streak
            heightRatio = 1.6 + Math.random() * 0.6; // 1.6â€“2.2x
          }

          let dropHeight = baseWidth * heightRatio * sizeScale;

          // SPEED: base time, then slowed by ~40%
          const originalTime = 1.2 + Math.random() * 1.6;
          const dropTime = originalTime * 1.4;

          // EVEN STAGGER
          const dropDelay = (i / dropCount) * maxDelay;

          drop.style.left = leftPercent + "%";
          drop.style.width = dropWidth + "px";
          drop.style.height = dropHeight + "px";
          drop.style.animation = `${dropTime}s btn-streaking linear infinite`;
          drop.style.animationDelay = `${dropDelay}s`;

          shadow.style.left = leftPercent + "%";
          shadow.style.width = Math.max(dropWidth - 1, 1) + "px";
          shadow.style.height = Math.max(dropHeight - 1, 1) + "px";
          shadow.style.animation = `${dropTime}s btn-streaking linear infinite`;
          shadow.style.animationDelay = `${dropDelay}s`;

          dropsContainer.appendChild(drop);
          shadowsContainer.appendChild(shadow);
        }
      })();
    </script>
  </body>
</html>
