<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>GSAP Video + Falling Text Demo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- GSAP + ScrollTrigger -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>

    <style>
      :root {
        --light-bg: #f5f5f2;
        --text: #141414;
        --accent: #0bb9d1;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: #e9e9e4;
        color: var(--text);
        min-height: 200vh;
      }

      .gsap-video-wrapper {
        height: 250vh;
        position: relative;
      }

      .gsap-video-content {
        height: 100vh;
        position: sticky;
        top: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background: var(--light-bg);
        padding-bottom: 15vh;
      }

      .gsap-text-container {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        width: 100%;
        max-width: 1800px;
        padding: 4rem 4rem 0;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: 3;
      }

      .gsap-text-left,
      .gsap-text-right {
        font-size: clamp(4rem, 10vw, 14rem);
        font-weight: 500;
        letter-spacing: -0.04em;
        line-height: 0.9;
        text-transform: uppercase;
        color: var(--text);
      }

      .gsap-video-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 30vw;
        height: 12.5vw;
        border-radius: 0px;
        overflow: hidden;
        z-index: 5;
      }

      .gsap-video-container video {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .gsap-bottom-text {
        position: absolute;
        bottom: 15vh;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        max-width: 1600px;
        padding: 0 4rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        z-index: 4;
        pointer-events: none;
      }

      .gsap-bottom-left,
      .gsap-bottom-right {
        width: 45%;
        pointer-events: auto;
      }

      .falling-text-container {
        position: relative;
        width: 100%;
        height: auto;
        min-height: 120px;
        display: flex;
        align-items: flex-end;
        justify-content: center;
      }

      .falling-text-inner {
        position: relative;
        display: inline-block;
        line-height: 1;
        text-align: center;
        font-size: clamp(1.75rem, 4.2vw, 3.5rem);
        padding-bottom: 0.5rem;
      }

      .falling-char {
        display: inline-block;
        white-space: pre;
        user-select: none;
        color: var(--accent);
        font-weight: 700;
        text-transform: uppercase;
      }

      @media (max-width: 1024px) {
        .gsap-text-container {
          padding: 2rem 2rem 0;
        }

        .gsap-text-left,
        .gsap-text-right {
          font-size: clamp(3rem, 10vw, 10rem);
        }

        .gsap-video-container {
          width: 55vw;
          height: 30.9375vw;
        }

        .gsap-bottom-text {
          padding: 0 2rem 2.5rem;
        }
      }

      @media (max-width: 768px) {
        .gsap-text-container {
          padding: 1.5rem 1rem 0;
          margin-top: 60px;
        }

        .gsap-text-left,
        .gsap-text-right {
          font-size: clamp(2.5rem, 12vw, 6rem);
        }

        .gsap-video-container {
          width: 65vw;
          height: 36.5625vw;
          top: 45%;
        }

        .gsap-bottom-text {
          padding: 0 1.5rem 2rem;
        }

        .falling-text-container {
          min-height: 100px;
        }

        .falling-text-inner {
          font-size: clamp(1.4rem, 4.9vw, 2.8rem);
        }
      }

      @media (max-width: 480px) {
        .gsap-text-container {
          padding: 1.5rem 1rem 0;
          margin-top: 70px;
        }

        .gsap-text-left,
        .gsap-text-right {
          font-size: clamp(2rem, 10vw, 4rem);
        }

        .gsap-video-container {
          width: 75vw;
          height: 42.1875vw;
          top: 42%;
        }

        .gsap-bottom-text {
          padding: 0 1rem 1.5rem;
        }

        .falling-text-container {
          min-height: 90px;
        }

        .falling-text-inner {
          font-size: clamp(1.26rem, 4.2vw, 2.1rem);
        }
      }
    </style>
  </head>
  <body>
    <!-- Spacer -->
    <div style="height: 60vh"></div>

    <section class="gsap-video-wrapper">
      <div class="gsap-video-content">
        <!-- Top big headings -->
        <div class="gsap-text-container">
          <div class="gsap-text-left">Latest</div>
          <div class="gsap-text-right">Project</div>
        </div>

        <!-- Center video -->
        <div class="gsap-video-container">
          <video autoplay muted loop playsinline>
            <source
              src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"
              type="video/mp4"
            />
            Your browser does not support the video tag.
          </video>
        </div>

        <!-- Bottom words -->
        <div class="gsap-bottom-text">
          <div class="gsap-bottom-left">
            <div class="falling-text-container" data-text="CREATIVE"></div>
          </div>
          <div class="gsap-bottom-right">
            <div class="falling-text-container" data-text="DIGITAL"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Spacer -->
    <div style="height: 100vh"></div>

    <script>
      gsap.registerPlugin(ScrollTrigger);

      function initFallingText() {
        document
          .querySelectorAll(".falling-text-container")
          .forEach((container) => {
            const text = container.dataset.text || "Text";
            const inner = document.createElement("div");
            inner.className = "falling-text-inner";

            text.split("").forEach((ch) => {
              const span = document.createElement("span");
              span.className = "falling-char";
              span.textContent = ch === " " ? "\u00A0" : ch;
              inner.appendChild(span);
            });

            // Repeat text 4 times
            const originalHTML = inner.innerHTML;
            inner.innerHTML = originalHTML + originalHTML + originalHTML + originalHTML;

            container.innerHTML = "";
            container.appendChild(inner);
          });
      }

      initFallingText();

      window.addEventListener("load", () => {
        const wrapper = document.querySelector(".gsap-video-wrapper");
        const videoContainer = document.querySelector(".gsap-video-container");
        const textLeft = document.querySelector(".gsap-text-left");
        const textRight = document.querySelector(".gsap-text-right");
        const bottomContainers = document.querySelectorAll(
          ".falling-text-container"
        );

        // Initial state for top text
        gsap.set(textLeft, { xPercent: -150, opacity: 0 });
        gsap.set(textRight, { xPercent: 150, opacity: 0 });

        // Slide in top text
        gsap.to([textLeft, textRight], {
          xPercent: 0,
          opacity: 1,
          duration: 1.2,
          ease: "power2.out",
          scrollTrigger: {
            trigger: wrapper,
            start: "top 70%",
            toggleActions: "play none none none",
          },
        });

        // Set initial state for falling text - positioned normally, will fall with physics
        bottomContainers.forEach((container) => {
          const chars = container.querySelectorAll(".falling-char");
          gsap.set(chars, { 
            y: 0, 
            opacity: 1,
            rotation: 0
          });
        });

        // Falling text animation function
        function triggerFalling() {
          bottomContainers.forEach((container) => {
            const chars = container.querySelectorAll(".falling-char");

            // Create a timeline for reversible animation
            const fallTl = gsap.timeline();
            
            fallTl.to(chars, {
              y: 0,
              opacity: 1,
              rotation: () => gsap.utils.random(-15, 15),
              ease: "bounce.out",
              duration: 1.2,
              stagger: {
                amount: 0.3,
                from: "random"
              }
            });
          });
        }

        // Main scroll animation timeline
        const tl = gsap.timeline({
          scrollTrigger: {
            trigger: wrapper,
            start: "top top",
            end: "bottom bottom",
            scrub: 1,
            pin: ".gsap-video-content",
            pinSpacing: true,
          },
        });

        // Collect all falling chars for scrubbed animation
        const allChars = [];
        bottomContainers.forEach((container) => {
          const chars = container.querySelectorAll(".falling-char");
          allChars.push(...chars);
        });

        // Video expansion to full screen - takes 60% of timeline (0 to 0.6)
        tl.to(
          videoContainer,
          {
            width: "100vw",
            height: "100vh",
            borderRadius: 0,
            ease: "power2.inOut",
            duration: 0.6,
          },
          0
        )

        // Top text fades out in sync with video expansion
        .to(
          textLeft,
          {
            x: -500,
            opacity: 0,
            ease: "power2.inOut",
            duration: 0.6,
          },
          0
        )
        .to(
          textRight,
          {
            x: 500,
            opacity: 0,
            ease: "power2.inOut",
            duration: 0.6,
          },
          0
        )

        // Falling text animation - immediate free fall ALL AT ONCE
        .to(
          allChars,
          {
            y: 200,
            opacity: 1,
            rotation: (i) => gsap.utils.random(-25, 25),
            ease: "power1.in",
            duration: 0.15,
            stagger: 0
          },
          0
        )
        
        // Bounce back up slightly
        .to(
          allChars,
          {
            y: 180,
            ease: "bounce.out",
            duration: 0.1,
            stagger: 0
          },
          0.15
        )
        
        // Hold the final state
        .to({}, { duration: 0.3 });
      });
    </script>
  </body>
</html>