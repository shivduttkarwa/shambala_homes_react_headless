<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GSAP Scroll Video Section</title>
    <style>
        .essence-video-wrapper {
            height: 250vh;
            position: relative;
        }

        .essence-video-content {
            height: 100vh;
            position: sticky;
            top: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            background: #f5f5f5;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        }

        .essence-text-container {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            width: 100%;
            max-width: 1800px;
            padding: 4rem 4rem 0;
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            z-index: 3;
        }

        .essence-text-left,
        .essence-text-right {
            font-size: clamp(4rem, 12vw, 14rem);
            font-weight: 700;
            letter-spacing: -0.04em;
            line-height: 0.9;
            text-transform: uppercase;
        }

        .essence-text-left {
            color: #1a1a1a;
        }

        .essence-text-right {
            color: #1a1a1a;
        }

        .essence-video-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 40vw;
            height: 22.5vw;
            border-radius: 24px;
            overflow: hidden;
            z-index: 5;
        }

        .essence-video-container video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        @media (max-width: 1024px) {
            .essence-text-container {
                padding: 2rem 2rem 0;
            }

            .essence-text-left,
            .essence-text-right {
                font-size: clamp(3rem, 10vw, 10rem);
            }

            .essence-video-container {
                width: 55vw;
                height: 30.9375vw;
            }
        }

        @media (max-width: 768px) {
            .essence-text-container {
                padding: 2rem 1.5rem 0;
                max-width: 100%;
            }

            .essence-text-left,
            .essence-text-right {
                font-size: clamp(2.5rem, 12vw, 6rem);
            }

            .essence-video-container {
                width: 65vw;
                height: 36.5625vw;
                top: 45%;
            }
        }

        @media (max-width: 480px) {
            .essence-text-container {
                padding: 1.5rem 1rem 0;
            }

            .essence-text-left,
            .essence-text-right {
                font-size: clamp(2rem, 14vw, 4rem);
            }

            .essence-video-container {
                width: 75vw;
                height: 42.1875vw;
                top: 42%;
            }
        }
    </style>
</head>
<body>
    <section class="essence-video-wrapper">
        <div class="essence-video-content">
            <div class="essence-text-container">
                <div class="essence-text-left">OUR</div>
                <div class="essence-text-right">VISION</div>
            </div>
            <div class="essence-video-container">
                <video autoplay muted loop playsinline>
                    <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4" type="video/mp4">
                </video>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
    
    <script>
        gsap.registerPlugin(ScrollTrigger);

        const videoContainer = document.querySelector('.essence-video-container');
        const textLeft = document.querySelector('.essence-text-left');
        const textRight = document.querySelector('.essence-text-right');

        const tl = gsap.timeline({
            scrollTrigger: {
                trigger: '.essence-video-wrapper',
                start: 'top top',
                end: 'bottom bottom',
                scrub: 1,
                pin: false
            }
        });

        // Animation starts at 0%, reaches full bleed at 60%, then pauses until 100%
        tl.to(videoContainer, {
            width: '100vw',
            height: '100vh',
            borderRadius: 0,
            ease: 'power2.inOut',
            duration: 0.6
        })
        .to(textLeft, {
            x: -500,
            opacity: 0,
            ease: 'power2.inOut',
            duration: 0.6
        }, 0)
        .to(textRight, {
            x: 500,
            opacity: 0,
            ease: 'power2.inOut',
            duration: 0.6
        }, 0)
        // Reduced pause duration
        .to({}, { duration: 0.4 });
    </script>
</body>
</html>